<!DOCTYPE html>
<html ng-app='mainApp'>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
	<link rel="stylesheet" href="/javascripts/bootstrap.min.css">
	<link rel="stylesheet" href="/javascripts/bootstrap-theme.min.css">
	<script src="/seneca/init.js"></script>
	<script src="/javascripts/angular.min.js"></script>
	<script src="/javascripts/mainController.js"></script>
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %> template</p>
	 <div ng-controller='mainCtrl'>
		<p>Name:<input type="text" ng-model="nameInput" placeholder="name"/></p>
		<h3>{{greetings}}</h3>
		<h3>{{randomNumber}}</h3>
		 <input class="btn" type="button" ng-click="greetUser()" value="Greetings"/>
		 <input class="btn" type="button" ng-click="generateRandomNumber()" value="Generate Random Number"/>
	  </div>
  </body>
</html>
